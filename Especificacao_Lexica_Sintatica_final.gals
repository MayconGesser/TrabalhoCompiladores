metodo		= id : "metodo"
nao		= id : "nao"
ou		= id : "ou"
procedimento	= id : "procedimento"
programa		= id : "programa"
real		= id : "real"
ref		= id : "ref"
retorne		= id : "retorne"
se		= id : "se"
senao		= id : "senao"
val		= id : "val"
var		= id : "var"
verdadeiro	= id : "verdadeiro"
